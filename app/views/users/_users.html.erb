<% if users.any? %>
  <ul>
    <% users.each do |user|%>
      <li class="media">
        <div class="media-left">
         <% if user.picture.file.nil? %>
            <img class="media-object img-rounded" src="<%= gravatar_url(user, {size: 50})%>" alt="">
          <% else %>
            <%= image_tag(user.picture.url, size: 50) %>
          <% end %>
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'view profile', user_path(user) %></p>
          </div>
        </div>
      </li>
      <% end %>
  </ul>
  <%= paginate users %>
<% end %>